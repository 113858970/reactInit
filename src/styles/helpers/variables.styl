
//== colors

// design color
$color-A0 = #f5f5f5 // 背景色
$color-A1 = #38acff // 主色
$color-B1 = #ffc03c // 辅助色1
$color-B2 = #f48644 // 辅助色2
$color-B3 = #82c650 // 辅助色3
$color-B4 = #fa3c3c // 辅助色4
$color-Z1 = #333333 // 主文
$color-Z2 = #666666 // 副文
$color-Z3 = #a0a0a0 // 提示文案
$color-Z4 = #bec0c0 // 弱化文案
$color-L1 = #ececec // line1 - 常用于分割线
$color-L2 = #dcdcdc // line2 - 常用于tab分割线

// brand
$brand-primary = $color-A1
$brand-success = $color-B3
$brand-info = $color-B3
$brand-warning = $color-B1
$brand-danger = $color-B4

//** Background color for `<body>`.
$body-bg = $color-A0

$text-color = $color-Z1


//== font
$font-family-chinese   = "PingFang SC", "Microsoft YaHei"
$font-family-base      = $font-family-chinese, sans-serif
$font-family-monospace = consolas, Menlo, $font-family-chinese, monospace

$font-size-base = px2rem(28)


//== media queries breakpoints

// xs
$screen-xs      = 480px
$screen-xs-min  = $screen-xs

// sm
$screen-sm      = 768px
$screen-sm-min  = $screen-sm

// md
$screen-md      = 992px
$screen-md-min  = $screen-md

// lg
$screen-lg      = 1200px
$screen-lg-min  = $screen-lg

// max
$screen-xs-max  = $screen-sm-min - 1
$screen-sm-max  = $screen-md-min - 1
$screen-md-max  = $screen-lg-min - 1

$screen-tablet  = $screen-sm
$screen-desktop = $screen-md
$screen-large   = $screen-lg
